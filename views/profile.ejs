<%- include('partials/header') %>
<!-- Navigation -->
<%- include('partials/nav') %>

<!-- Main Content -->
<div class="w-[80%] mx-auto p-10">

  <!-- User Welcome Section -->
  <div class="w-full bg-zinc-700 rounded-lg shadow-lg p-6 mb-10">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-white text-5xl font-bold">Hello <%= user.username %> ðŸ‘‹</h1>
      <!-- Avatar with fallback -->
     
    </div>
    <a class="bg-red-500 hover:bg-red-700 text-white font-semibold py-2 px-5 rounded-lg shadow transition duration-300" href="/user/logout">Logout</a>
  </div>

  <hr class="my-6 border-gray-600">

  <!-- Posts Section -->
  <div class="w-full mt-10">
    <h1 class="text-3xl font-extrabold text-black mb-6">Your Posts</h1>

    <% posts.forEach((post, index) => { %>
      <!-- Post Card -->
      <div class="bg-zinc-800 rounded-lg shadow-lg p-6 mb-6 transition transform hover:scale-105 hover:shadow-2xl">
        <h2 class="text-2xl font-bold text-white mb-2"><%= post.title %></h2>
        <div class="relative w-full h-[300px] overflow-hidden rounded-lg mb-4">
          <img class="w-full h-full object-contain" src="<%= post.media.thumbnailUrl %>" alt="Post Image">
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-400 text-sm"><%= post.likes.length %> Likes</span>
          <a href="/post/like/<%= post._id %>" class="text-blue-500 hover:text-blue-700 font-semibold">Like</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Footer -->
<%- include('partials/footer') %>
